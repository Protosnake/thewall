{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "backend/*": ["backend/*"],
      "database/*": ["backend/database/*"],
      "handlers/*": ["backend/handlers/*"],
      "schemas/*": ["backend/schemas/*"],
      "frontend/*": ["frontend/*"],
      "testing/*": ["testing/*"],
      "constants/*": ["constants/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx"]
}
