{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["bun"],
    "jsx": "react-jsx",
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "backend": ["backend/*"],
      "database": ["backend/database/*"],
      "handlers": ["backend/handlers/*"],
      "schemas": ["backend/schemas/*"],
      "frontend": ["frontend/*"],
      "testing": ["testing/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts"]
}
